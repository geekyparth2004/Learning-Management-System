// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Assignment {
  id        String    @id @default(cuid())
  title     String
  createdAt DateTime  @default(now())
  problems  Problem[]
  progress  AssignmentProgress[]
  moduleItems ModuleItem[]
}

model Problem {
  id           String       @id @default(cuid())
  title        String
  description  String
  defaultCode  String       // Stored as JSON string: { "cpp": "...", "python": "..." }
  hints        String       @default("[]") // Stored as JSON string: ["hint1", "hint2", "hint3", "hint4/video"]
  videoSolution String?     // Path to uploaded video file (optional)
  leetcodeUrl  String?      // URL to LeetCode problem
  slug         String?      // LeetCode problem slug (e.g., "two-sum")
  assignment   Assignment   @relation(fields: [assignmentId], references: [id], onDelete: Cascade)
  assignmentId String
  testCases    TestCase[]
  submissions  Submission[]
}

model TestCase {
  id             String  @id @default(cuid())
  input          String
  expectedOutput String
  isHidden       Boolean @default(false)
  problem        Problem @relation(fields: [problemId], references: [id], onDelete: Cascade)
  problemId      String
}

model User {
  id          String       @id @default(cuid())
  name        String
  email       String       @unique
  password    String
  role        String       @default("STUDENT") // "TEACHER" or "STUDENT"
  submissions Submission[]
  progress    AssignmentProgress[]
  courses            Course[]             @relation("TeacherCourses")
  enrollments        Enrollment[]
  moduleProgress     ModuleProgress[]
  moduleItemProgress ModuleItemProgress[]
}

model Submission {
  id        String   @id @default(cuid())
  code      String
  language  String
  status    String   // "PASSED" | "FAILED"
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String
  problem   Problem  @relation(fields: [problemId], references: [id], onDelete: Cascade)
  problemId String
}

model AssignmentProgress {
  id           String     @id @default(cuid())
  user         User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId       String
  assignment   Assignment @relation(fields: [assignmentId], references: [id], onDelete: Cascade)
  assignmentId String
  startedAt    DateTime   @default(now())

  @@unique([userId, assignmentId])
}

model Course {
  id          String       @id @default(cuid())
  title       String
  description String
  teacherId   String
  teacher     User         @relation("TeacherCourses", fields: [teacherId], references: [id])
  modules     Module[]
  enrollments Enrollment[]
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
}

model Module {
  id          String           @id @default(cuid())
  title       String
  courseId    String
  course      Course           @relation(fields: [courseId], references: [id], onDelete: Cascade)
  order       Int
  timeLimit   Int              // In minutes
  items       ModuleItem[]
  progress    ModuleProgress[]
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt
}

model ModuleItem {
  id           String               @id @default(cuid())
  title        String
  type         String               // "VIDEO" | "ASSIGNMENT"
  content      String?              // URL for video
  assignmentId String?
  assignment   Assignment?          @relation(fields: [assignmentId], references: [id])
  moduleId     String
  module       Module               @relation(fields: [moduleId], references: [id], onDelete: Cascade)
  order        Int
  progress     ModuleItemProgress[]
}

model Enrollment {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  courseId  String
  course    Course   @relation(fields: [courseId], references: [id], onDelete: Cascade)
  status    String   @default("ACTIVE") // "ACTIVE" | "COMPLETED"
  enrolledAt DateTime @default(now())

  @@unique([userId, courseId])
}

model ModuleProgress {
  id          String    @id @default(cuid())
  userId      String
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  moduleId    String
  module      Module    @relation(fields: [moduleId], references: [id], onDelete: Cascade)
  status      String    @default("LOCKED") // "LOCKED" | "IN_PROGRESS" | "COMPLETED"
  startedAt   DateTime?
  completedAt DateTime?

  @@unique([userId, moduleId])
}

model ModuleItemProgress {
  id           String     @id @default(cuid())
  userId       String
  user         User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  moduleItemId String
  moduleItem   ModuleItem @relation(fields: [moduleItemId], references: [id], onDelete: Cascade)
  isCompleted  Boolean    @default(false)
  completedAt  DateTime?

  @@unique([userId, moduleItemId])
}

// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                 String               @id @default(cuid())
  name               String?
  email              String               @unique
  password           String?
  image              String?
  role               String               @default("STUDENT") // Was UserRole
  githubAccessToken  String?
  leetcodeUsername   String?
  
  // Relations
  courses            Course[]             @relation("TeacherCourses")
  enrollments        Enrollment[]
  moduleProgress     ModuleProgress[]
  moduleItemProgress ModuleItemProgress[]
  submissions        Submission[]
  assignmentProgress AssignmentProgress[]
  notifications      Notification[]
  
  createdAt          DateTime             @default(now())
  updatedAt          DateTime?            @updatedAt
  
  accounts           Account[]
}

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String? @db.Text
  access_token       String? @db.Text
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String? @db.Text
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Course {
  id          String       @id @default(cuid())
  title       String
  description String?
  
  teacherId   String
  teacher     User         @relation("TeacherCourses", fields: [teacherId], references: [id])
  
  modules     Module[]
  enrollments Enrollment[]
  
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
}

model Module {
  id          String           @id @default(cuid())
  title       String
  courseId    String
  course      Course           @relation(fields: [courseId], references: [id], onDelete: Cascade)
  order       Int
  timeLimit   Int              // In minutes
  
  items       ModuleItem[]
  progress    ModuleProgress[]
  
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt
}

model ModuleItem {
  id           String               @id @default(cuid())
  title        String
  type         String               // Was ModuleItemType
  content      String?              // Video URL or Assignment ID (for legacy/simple assignment)
  order        Int
  
  // Relations
  moduleId     String
  module       Module               @relation(fields: [moduleId], references: [id], onDelete: Cascade)
  
  // AI Interview Fields
  aiInterviewTopic String?
  aiQuestionsCount Int?
  aiDifficulty     String?          @default("Medium") // "Basic" | "Easy" | "Medium" | "Hard"

  // Test Fields
  testDuration      Int?            // in minutes
  testPassingScore  Int?            // percentage (e.g. 60)
  testProblems      Problem[]       // Problems specific to this test item

  // Web Dev Fields
  webDevInstructions String?
  webDevInitialCode  String?        // Was Json. Store as JSON string.

  assignmentId String?
  assignment   Assignment?          @relation(fields: [assignmentId], references: [id])

  progress     ModuleItemProgress[]

  createdAt    DateTime             @default(now())
  updatedAt    DateTime             @updatedAt

  @@index([moduleId])
  @@index([assignmentId])
}

model Assignment {
  id        String               @id @default(cuid())
  title     String
  problems  Problem[]
  progress  AssignmentProgress[]
  moduleItems ModuleItem[]
  
  createdAt DateTime             @default(now())
  updatedAt DateTime?            @updatedAt
}

model Problem {
  id            String       @id @default(cuid())
  title         String
  description   String
  difficulty    String       @default("Medium")
  slug          String?
  
  // Relations
  assignmentId  String?
  assignment    Assignment?  @relation(fields: [assignmentId], references: [id], onDelete: Cascade)
  
  // Content
  defaultCode   String?      // Was Json. Store as JSON string.
  hints         String?      // Was String[]. Store as JSON string.
  leetcodeUrl   String?
  videoSolution String?

  moduleItemId  String?
  moduleItem    ModuleItem?  @relation(fields: [moduleItemId], references: [id], onDelete: Cascade)

  testCases     TestCase[]
  submissions   Submission[]
  
  createdAt     DateTime     @default(now())
  updatedAt     DateTime?    @updatedAt

  @@index([assignmentId])
  @@index([moduleItemId])
}

model TestCase {
  id             String  @id @default(cuid())
  input          String
  expectedOutput String
  isHidden       Boolean @default(false)
  
  problemId      String
  problem        Problem @relation(fields: [problemId], references: [id], onDelete: Cascade)
}

model Submission {
  id        String   @id @default(cuid())
  code      String
  language  String
  status    String   // "PASSED" | "FAILED"
  
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  problemId String
  problem   Problem  @relation(fields: [problemId], references: [id], onDelete: Cascade)
  
  createdAt DateTime @default(now())
}

model Enrollment {
  id         String   @id @default(cuid())
  userId     String
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  courseId   String
  course     Course   @relation(fields: [courseId], references: [id], onDelete: Cascade)
  status     String   @default("ACTIVE") // "ACTIVE" | "COMPLETED"
  enrolledAt DateTime @default(now())

  @@unique([userId, courseId])
}

model ModuleProgress {
  id          String    @id @default(cuid())
  userId      String
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  moduleId    String
  module      Module    @relation(fields: [moduleId], references: [id], onDelete: Cascade)
  status      String    @default("LOCKED") // "LOCKED" | "IN_PROGRESS" | "COMPLETED"
  startedAt   DateTime?
  completedAt DateTime?

  @@unique([userId, moduleId])
}

model ModuleItemProgress {
  id           String     @id @default(cuid())
  userId       String
  user         User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  moduleItemId String
  moduleItem   ModuleItem @relation(fields: [moduleItemId], references: [id], onDelete: Cascade)
  isCompleted  Boolean    @default(false)
  completedAt  DateTime?
  startedAt    DateTime?
  
  // AI Interview Review
  aiSubmission String?    // Was Json. Store as JSON string.
  reviewStatus String?    // "PENDING" | "APPROVED" | "REJECTED"

  // Web Dev Submission
  webDevSubmission String? // Was Json. Store as JSON string.

  @@unique([userId, moduleItemId])
}

model AssignmentProgress {
  id           String     @id @default(cuid())
  userId       String
  user         User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  assignmentId String
  assignment   Assignment @relation(fields: [assignmentId], references: [id], onDelete: Cascade)
  startedAt    DateTime   @default(now())

  @@unique([userId, assignmentId])
}

model Notification {
  id          String   @id @default(cuid())
  userId      String   // Teacher ID
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  title       String
  message     String
  type        String   // "VIDEO_COMPLETED" | "ASSIGNMENT_SUBMITTED"
  link        String?  // URL to view submission
  isRead      Boolean  @default(false)
  createdAt   DateTime @default(now())
}
